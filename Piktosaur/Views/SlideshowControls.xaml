<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Piktosaur.Views.SlideshowControls"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Piktosaur.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Border Background="#CC202020"
            CornerRadius="8"
            Padding="8,8,8,8">
        <StackPanel Orientation="Horizontal" Spacing="4">
            <Button Click="OnFirstClick"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    ToolTipService.ToolTip="First image">
                <FontIcon Glyph="&#xEB9E;" Foreground="White" FontSize="16" />
            </Button>
            <Button Click="OnPreviousClick"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    ToolTipService.ToolTip="Previous image">
                <FontIcon Glyph="&#xE892;" Foreground="White" FontSize="16" />
            </Button>
            <Button x:Name="PlayPauseButton"
                    Click="OnPlayPauseClick"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    ToolTipService.ToolTip="Play/Pause">
                <FontIcon x:Name="PlayPauseIcon" Glyph="&#xE769;" Foreground="White" FontSize="16" />
            </Button>
            <Button Click="OnNextClick"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    ToolTipService.ToolTip="Next image">
                <FontIcon Glyph="&#xE893;" Foreground="White" FontSize="16" />
            </Button>
            <Button Click="OnLastClick"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    ToolTipService.ToolTip="Last image">
                <FontIcon Glyph="&#xEB9D;" Foreground="White" FontSize="16" />
            </Button>
        </StackPanel>
    </Border>
</UserControl>
