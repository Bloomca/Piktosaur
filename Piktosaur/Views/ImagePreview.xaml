<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="Piktosaur.Views.ImagePreview"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Piktosaur.Views"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Border Background="#40000000"
            CornerRadius="8">
        <Image PointerWheelChanged="PreviewImage_PointerWheelChanged"
               PointerPressed="PreviewImage_PointerPressed"
               PointerMoved="PreviewImage_PointerMoved"
               PointerReleased="PreviewImage_PointerReleased"
               x:Name="PreviewImage"
               Margin="12"
               RenderTransformOrigin="0.5,0.5"
               HorizontalAlignment="Center"
               VerticalAlignment="Center">
            <Image.RenderTransform>
                <CompositeTransform x:Name="ImageTransform"
                                    ScaleX="1"
                                    ScaleY="1"
                                    TranslateX="0"
                                    TranslateY="0"/>
            </Image.RenderTransform>
        </Image>
    </Border>
</UserControl>
